# Environment variables for Photography Site
# Copy this to .env and update with your values

# === CMS Configuration ===
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-change-this

# Your server URL (update with your actual server IP or domain)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Port for CMS (default: 3000)
CMS_PORT=3000

# Port for Frontend (default: 8080)
FRONTEND_PORT=8080

# === Admin User (created on first run) ===
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# === Cloudinary (Optional but Recommended) ===
# Sign up at https://cloudinary.com for free tier
# Get credentials from Dashboard -> Account Details
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# === Database (handled by Docker, no changes needed) ===
MONGODB_URI=mongodb://mongodb:27017/photography-cms
